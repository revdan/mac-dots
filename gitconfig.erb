[user]
  <% if ENV['GIT_NAME'] and ENV['GIT_EMAIL'] %>
  name = <%= ENV['GIT_NAME'] %>
  email = <%= ENV['GIT_EMAIL'] %>
  <% else %>
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
  <% end %>
[color]
     ui = auto
[alias]
  a = add .
  amend = commit --amend
  br = branch
  ci = commit
  co = checkout
  df = diff
  dft = difftool
  proon = remote prune origin
  proon-dry = remote prune origin --dry-run
  sh = stash
  st = status -sb

  l =  "!source ~/.githelpers && pretty_git_log"
  d =  "!source ~/.githelpers && deployment_git_log"
  la = !git l --all
  r = !git l -20
  ra = !git r --all
  f = "!git ls-files | grep -i"
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = vi
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[branch]
  autosetupmerge = true
[remote "origin"]
  push = HEAD
[push]
  default = tracking
[diff]
  mnemonicprefix = true
  tool = diffmerge
[difftool]
  prompt = false
[difftool "diffmerge"]
  cmd = diffmerge $LOCAL $REMOTE
